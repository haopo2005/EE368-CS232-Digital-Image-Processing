<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.ee368.flowchargenerator.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/cameraButton"
        android:onClick="launchCameraActivity"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realtime Camera"
        android:id="@+id/realtimeCameraButton"
        android:onClick="launchRealtimeCameraActivity"
        android:layout_below="@id/galleryButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_below="@id/cameraButton"
        android:id="@+id/galleryButton"
        android:onClick="launchGalleryActivity"/>


</RelativeLayout>
